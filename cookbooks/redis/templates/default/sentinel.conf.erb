daemonize no

port 26379
pidfile "/var/run/redis/redis-sentinel-26379.pid"
logfile ""
loglevel notice

# Note, this is now a quorm of 2 therefore we require at least two redis sentinels in the setup
sentinel monitor redis1 <%= @confvars[:redis] %> 6379 2
sentinel down-after-milliseconds redis1 5000
sentinel failover-timeout redis1 10000
