daemonize no

port 26379
pidfile "/var/run/redis/redis-sentinel-26379.pid"
logfile ""
loglevel notice
dir "/storage"

# Note, this is now a quorm of 2 therefore we require at least two redis sentinels in the setup
sentinel monitor <%= @sentinel_monitor %> <%= @sentinel_monitor_ip %> 6379 <%= @sentinel_quorum %>
sentinel down-after-milliseconds <%= @sentinel_monitor %> 5000
sentinel failover-timeout <%= @sentinel_monitor %> 10000
